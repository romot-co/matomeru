{
  "name": "matomeru",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "0.0.6",
  "repository": {
    "type": "git",
    "url": "https://github.com/romot-co/matomeru.git"
  },
  "publisher": "romot",
  "engines": {
    "vscode": "^1.96.0"
  },
  "extensionKind": [
    "workspace"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "matomeru.quickProcessToEditor",
        "title": "%cmd.quickProcessToEditor%"
      },
      {
        "command": "matomeru.quickProcessToClipboard",
        "title": "%cmd.quickProcessToClipboard%"
      },
      {
        "command": "matomeru.quickProcessToChatGPT",
        "title": "%cmd.quickProcessToChatGPT%",
        "when": "matomeru.chatGptIntegration && isOSX"
      },
      {
        "command": "matomeru.estimateSize",
        "title": "%cmd.estimateSize%"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "matomeru.quickProcessToEditor",
          "group": "matomeru@1"
        },
        {
          "command": "matomeru.quickProcessToClipboard",
          "group": "matomeru@2"
        },
        {
          "command": "matomeru.quickProcessToChatGPT",
          "group": "matomeru@3",
          "when": "matomeru.chatGptIntegration && isOSX"
        },
        {
          "command": "matomeru.estimateSize",
          "group": "matomeru@4"
        }
      ]
    },
    "configuration": {
      "title": "Matomeru",
      "properties": {
        "matomeru.maxFileSize": {
          "type": "number",
          "default": 1048576,
          "description": "%config.maxFileSize.description%"
        },
        "matomeru.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules/**",
            ".git/**",
            "dist/**",
            "build/**",
            "coverage/**",
            ".DS_Store",
            "Thumbs.db",
            "*.key",
            "*.pem",
            "*.crt",
            "id_rsa",
            "id_dsa",
            "*.p12",
            "*.pfx",
            "*.jks",
            "*secret*.*",
            "*password*.*",
            "*token*.*",
            "*.env*",
            "credential*",
            "config.*secret*.json",
            "private.*",
            "pnpm-lock.yaml",
            "yarn.lock",
            "package-lock.json",
            ".yarn/**",
            ".pnp.*",
            ".npm/**",
            "*.lock",
            "temp/",
            "tmp/",
            "*.tmp",
            ".idea/**",
            ".vscode/**",
            ".history/**",
            "*.pyc",
            "__pycache__/",
            ".pytest_cache/",
            ".mypy_cache/",
            ".ruff_cache/",
            ".next/**",
            ".nuxt/**",
            ".svelte-kit/**",
            "out/**",
            "vendor/**",
            "Pods/**"
          ],
          "description": "%config.excludePatterns.description%"
        },
        "matomeru.chatGptIntegration": {
          "type": "boolean",
          "default": false,
          "description": "%config.chatGptIntegration.description%"
        },
        "matomeru.directoryStructure.directoryIcon": {
          "type": "string",
          "default": "üìÅ",
          "description": "%config.directoryStructure.directoryIcon.description%"
        },
        "matomeru.directoryStructure.fileIcon": {
          "type": "string",
          "default": "üìÑ",
          "description": "%config.directoryStructure.fileIcon.description%"
        },
        "matomeru.directoryStructure.indentSize": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 8,
          "description": "%config.directoryStructure.indentSize.description%"
        },
        "matomeru.directoryStructure.showFileExtensions": {
          "type": "boolean",
          "default": true,
          "description": "%config.directoryStructure.showFileExtensions.description%"
        },
        "matomeru.prefixText": {
          "type": "string",
          "default": "",
          "description": "%config.prefixText.description%"
        },
        "matomeru.useGitignore": {
          "type": "boolean",
          "default": false,
          "description": "%config.useGitignore.description%"
        },
        "matomeru.useVscodeignore": {
          "type": "boolean",
          "default": false,
          "description": "%config.useVscodeignore.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run l10n && npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package": "vsce package",
    "prepackage": "npm run clean && npm run l10n && npm run compile && npm run convert-icon",
    "postpackage": "echo 'Package generated: ' && ls *.vsix",
    "install-extension": "npm run package && code --install-extension *.vsix --force && echo '„Ç§„É≥„Çπ„Éà„Éº„É´„ÅåÂÆå‰∫Ü„Åó„Åæ„Åó„Åü„ÄÇVSCode„ÇíÂÜçËµ∑Âãï„Åó„Å¶„Åè„Å†„Åï„ÅÑ„ÄÇ'",
    "uninstall-extension": "code --uninstall-extension romot-co.matomeru",
    "clean": "rimraf out dist *.vsix coverage",
    "l10n": "vscode-l10n-dev nls-extract src && vscode-l10n-dev nls-bundle l10n",
    "convert-icon": "npx svgexport images/icon.svg images/icon.png 128:128"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/l10n-dev": "^0.0.33",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "svgexport": "^0.4.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/minimatch": "^5.1.2",
    "@vscode/l10n": "^0.0.16",
    "isbinaryfile": "^5.0.4",
    "minimatch": "^10.0.1"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "license": "MIT",
  "keywords": [
    "file management",
    "export",
    "directory structure",
    "file structure",
    "documentation",
    "markdown",
    "summarize",
    "combine",
    "tree",
    "llm"
  ],
  "l10n": "./l10n"
}
