{
  "name": "matomeru",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "0.1.6",
  "repository": {
    "type": "git",
    "url": "https://github.com/romot-co/matomeru.git"
  },
  "publisher": "romot",
  "engines": {
    "vscode": "^1.96.0"
  },
  "extensionKind": [
    "workspace"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:**"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "matomeru.quickProcessToEditor",
        "title": "%cmd.quickProcessToEditor%"
      },
      {
        "command": "matomeru.quickProcessToClipboard",
        "title": "%cmd.quickProcessToClipboard%"
      },
      {
        "command": "matomeru.quickProcessToClipboardCompressed",
        "title": "%cmd.quickProcessToClipboardCompressed%"
      },
      {
        "command": "matomeru.quickProcessToChatGPT",
        "title": "%cmd.quickProcessToChatGPT%",
        "when": "matomeru.chatGptIntegration && isOSX"
      },
      {
        "command": "matomeru.estimateSize",
        "title": "%cmd.estimateSize%"
      },
      {
        "command": "matomeru.copyGitDiff",
        "title": "%cmd.copyGitDiff%"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "command": "matomeru.quickProcessToClipboard",
        "when": "explorerViewletVisible && !inputFocus"
      },
      {
        "key": "ctrl+alt+d",
        "mac": "cmd+alt+d",
        "command": "matomeru.copyGitDiff",
        "when": "gitOpenRepositoryCount != 0"
      },
      {
        "key": "ctrl+alt+e",
        "mac": "cmd+alt+e",
        "command": "matomeru.quickProcessToEditor",
        "when": "explorerViewletVisible && !inputFocus"
      },
      {
        "key": "ctrl+alt+shift+c",
        "mac": "cmd+alt+shift+c",
        "command": "matomeru.quickProcessToClipboardCompressed",
        "when": "explorerViewletVisible && !inputFocus"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "matomeru.quickProcessToEditor",
          "group": "matomeru@1"
        },
        {
          "command": "matomeru.quickProcessToClipboard",
          "group": "matomeru@2"
        },
        {
          "command": "matomeru.quickProcessToClipboardCompressed",
          "group": "matomeru@2"
        },
        {
          "command": "matomeru.quickProcessToChatGPT",
          "group": "matomeru@3",
          "when": "matomeru.chatGptIntegration && isOSX"
        },
        {
          "command": "matomeru.copyGitDiff",
          "group": "matomeru@diff"
        }
      ],
      "scm/context": [
        {
          "command": "matomeru.copyGitDiff",
          "group": "matomeru@diff"
        }
      ]
    },
    "configuration": {
      "title": "Matomeru",
      "properties": {
        "matomeru.maxFileSize": {
          "type": "number",
          "default": 1048576,
          "description": "%config.maxFileSize.description%"
        },
        "matomeru.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules/**",
            ".git/**",
            "dist/**",
            "build/**",
            "coverage/**",
            ".DS_Store",
            "Thumbs.db",
            "*.key",
            "*.pem",
            "*.crt",
            "id_rsa",
            "id_dsa",
            "*.p12",
            "*.pfx",
            "*.jks",
            "*secret*.*",
            "*password*.*",
            "*token*.*",
            "*.env*",
            "credential*",
            "config.*secret*.json",
            "private.*",
            "pnpm-lock.yaml",
            "yarn.lock",
            "package-lock.json",
            ".yarn/**",
            ".pnp.*",
            ".npm/**",
            "*.lock",
            "temp/",
            "tmp/",
            "*.tmp",
            ".idea/**",
            ".vscode/**",
            ".history/**",
            "*.pyc",
            "__pycache__/",
            ".pytest_cache/",
            ".mypy_cache/",
            ".ruff_cache/",
            ".next/**",
            ".nuxt/**",
            ".svelte-kit/**",
            "out/**",
            "vendor/**",
            "Pods/**"
          ],
          "description": "%config.excludePatterns.description%"
        },
        "matomeru.chatGptIntegration": {
          "type": "boolean",
          "default": false,
          "description": "%config.chatGptIntegration.description%"
        },
        "matomeru.directoryStructure.directoryIcon": {
          "type": "string",
          "default": "üìÅ",
          "description": "%config.directoryStructure.directoryIcon.description%"
        },
        "matomeru.directoryStructure.fileIcon": {
          "type": "string",
          "default": "üìÑ",
          "description": "%config.directoryStructure.fileIcon.description%"
        },
        "matomeru.directoryStructure.indentSize": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 8,
          "description": "%config.directoryStructure.indentSize.description%"
        },
        "matomeru.directoryStructure.showFileExtensions": {
          "type": "boolean",
          "default": true,
          "description": "%config.directoryStructure.showFileExtensions.description%"
        },
        "matomeru.directoryStructure.useEmoji": {
          "type": "boolean",
          "default": true,
          "description": "%config.directoryStructure.useEmoji.description%"
        },
        "matomeru.prefixText": {
          "type": "string",
          "default": "",
          "description": "%config.prefixText.description%"
        },
        "matomeru.useGitignore": {
          "type": "boolean",
          "default": false,
          "description": "%config.useGitignore.description%"
        },
        "matomeru.useVscodeignore": {
          "type": "boolean",
          "default": false,
          "description": "%config.useVscodeignore.description%"
        },
        "matomeru.gitDiff.range": {
          "type": "string",
          "default": "",
          "description": "%config.gitDiff.range.description%"
        },
        "matomeru.enableStripTypes": {
          "type": "boolean",
          "default": true,
          "description": "%config.enableStripTypes.description%"
        },
        "matomeru.diff.mode": {
          "type": "string",
          "enum": [
            "file",
            "function"
          ],
          "default": "function",
          "description": "%config.diff.mode.description%"
        },
        "matomeru.diff.localContextLines": {
          "type": "number",
          "default": 3,
          "minimum": 0,
          "description": "%config.diff.localContextLines.description%"
        },
        "matomeru.outputFormat": {
          "type": "string",
          "default": "markdown",
          "enum": [
            "markdown",
            "yaml"
          ],
          "description": "%matomeru.outputFormat.description%"
        },
        "matomeru.includeDependencies": {
          "type": "boolean",
          "default": false,
          "description": "%config.includeDependencies.description%"
        },
        "matomeru.mermaid.maxNodes": {
          "type": "number",
          "default": 300,
          "description": "%config.mermaid.maxNodes.description%"
        },
        "matomeru.yaml.includeContent": {
          "type": "boolean",
          "default": false,
          "description": "%config.yaml.includeContent.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run l10n && npm run compile && npm run copy-wasm",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:int": "jest -c jest.integration.config.js",
    "test:int:local": "SKIP_INTEGRATION_TESTS=false jest -c jest.integration.config.js",
    "test:int:skip": "SKIP_INTEGRATION_TESTS=true jest -c jest.integration.config.js",
    "test:all": "npm run test && npm run test:int:skip",
    "test:all:local": "npm run test && npm run test:int:local",
    "test:ci": "npm run test && npm run test:coverage && npm run test:int:skip",
    "package": "vsce package",
    "prepackage": "npm run clean && npm run l10n && npm run compile && npm run copy-wasm",
    "postpackage": "echo 'Package generated: ' && ls *.vsix",
    "install-extension": "npm run package && code --install-extension *.vsix --force && echo '„Ç§„É≥„Çπ„Éà„Éº„É´„ÅåÂÆå‰∫Ü„Åó„Åæ„Åó„Åü„ÄÇVSCode„ÇíÂÜçËµ∑Âãï„Åó„Å¶„Åè„Å†„Åï„ÅÑ„ÄÇ'",
    "uninstall-extension": "code --uninstall-extension romot-co.matomeru",
    "clean": "rimraf out dist *.vsix coverage",
    "l10n": "vscode-l10n-dev nls-extract src && vscode-l10n-dev nls-bundle l10n",
    "convert-icon": "npx svgexport images/icon.svg images/icon.png 128:128",
    "postinstall": "npm run copy-wasm",
    "copy-wasm": "mkdir -p out/grammars && copyfiles -u 3 \"node_modules/@vscode/tree-sitter-wasm/wasm/*.wasm\" out/grammars"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/l10n-dev": "^0.0.33",
    "@vscode/test-electron": "^2.3.8",
    "copyfiles": "^2.4.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2"
  },
  "dependencies": {
    "@types/minimatch": "^5.1.2",
    "@vscode/l10n": "^0.0.16",
    "@vscode/tree-sitter-wasm": "^0.1.4",
    "isbinaryfile": "^5.0.4",
    "js-yaml": "^4.1.0",
    "minimatch": "^10.0.1",
    "web-tree-sitter": "^0.25.3"
  },
  "bundledDependencies": [
    "web-tree-sitter",
    "@vscode/tree-sitter-wasm",
    "js-yaml",
    "isbinaryfile",
    "minimatch",
    "@vscode/l10n"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#F0F0F0",
    "theme": "light"
  },
  "license": "MIT",
  "keywords": [
    "file management",
    "export",
    "directory structure",
    "copy",
    "file structure",
    "documentation",
    "markdown",
    "yaml",
    "summarize",
    "combine",
    "tree",
    "llm"
  ],
  "l10n": "./l10n"
}
